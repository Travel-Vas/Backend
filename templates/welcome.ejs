<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Welcome to Travel VAS</title>
  <style>
    /* Reset/Base Styles for Email Clients */
    body, html {
      margin: 0;
      padding: 0;
      -webkit-text-size-adjust: 100%; /* Prevent font scaling on iOS */
      -ms-text-size-adjust: 100%; /* Prevent font scaling on Windows Mobile */
      width: 100%;
      font-family: 'Segoe UI', Arial, sans-serif; /* Apply font here as well for broad support */
      background-color: #f8f9fa; /* Apply background to body */
    }
    table {
      mso-table-lspace: 0pt !important; /* Outlook specific */
      mso-table-rspace: 0pt !important; /* Outlook specific */
      border-collapse: collapse !important;
      border-spacing: 0 !important;
    }
    td {
      border-collapse: collapse !important;
    }
    img {
      border: 0;
      outline: none;
      text-decoration: none;
      -ms-interpolation-mode: bicubic; /* IE specific */
    }
    a {
      text-decoration: none;
      color: inherit; /* Inherit color to allow parent styles to apply */
    }
    p {
      margin: 0; /* Reset default paragraph margins */
      padding: 0;
    }

    /* --- Main Email Container --- */
    .email-container {
      max-width: 600px;
      margin: 30px auto; /* Centers the container in the page */
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      overflow: hidden; /* Ensures border-radius is respected */
    }

    /* --- Header Section --- */
    .email-header {
      background: linear-gradient(135deg, #000080 0%, #000066 100%);
      color: white;
      text-align: center; /* Centers header text and inline content */
      padding: 30px 0;
    }
    .logo-container {
      margin-bottom: 15px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .logo-container img {
      width: 120px;
      height: auto;
      display: block; /* Important for centering with margin: auto */
      margin: 0 auto 10px; /* Centers the image */
    }
    .brand-name {
      font-size: 28px;
      font-weight: 600;
      margin: 0;
    }
    .brand-name .travel { color: #FFFFFF; }
    .brand-name .vas { color: white; }

    /* --- Email Body Content --- */
    .email-body {
      padding: 40px 30px; /* Controls inner spacing */
      text-align: left; /* Aligns all text/inline content to the left within this block */
      color: #444; /* Default text color for body paragraphs */
    }
    .email-body h1 {
      color: #000080;
      font-size: 24px;
      margin-bottom: 20px;
      /* No specific text-align needed here, inherits from .email-body */
    }
    .email-body p {
      line-height: 1.8;
      margin-bottom: 15px;
      /* No specific text-align needed here, inherits from .email-body */
    }
    .feature-list {
      margin: 25px 0;
      padding-left: 20px;
      /* No specific text-align needed here, inherits from .email-body */
    }
    .feature-list li {
      color: #444;
      margin-bottom: 10px;
      line-height: 1.6;
    }

    /* --- CTA Button --- */
    .cta-button-container {
      text-align: center; /* Centers the inline-block button */
      margin: 30px 0;
    }
    .cta-button {
      display: inline-block; /* Essential for padding, margins, and text-align: center on parent */
      padding: 14px 30px;
      background-color: transparent;
      color: #000080;
      border: 2px solid #000080;
      text-decoration: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    .cta-button:hover {
      background-color: #000066;
      color: #FFFFFF;
      border-color: #000066;
    }

    /* --- Footer --- */
    .email-footer {
      background-color: #f9f9fa;
      color: #666;
      text-align: center; /* Centers ALL text and inline-block children */
      padding: 20px 0;
      font-size: 12px;
      border-top: 1px solid #eee;
    }
    .email-footer p {
      margin: 5px 0; /* Add margin for footer paragraphs */
    }
    .email-footer a {
      color: #000080;
      text-decoration: none;
      font-weight: 500;
    }
    .email-footer a:hover { text-decoration: underline; }

    /* --- Social Links (Fixed for robust centering) --- */
    .social-container {
      /* This container is inside the .email-footer which has text-align: center,
         so it will also be centered if it were inline-block.
         Using margin: auto for block-level elements to center them more reliably. */
      width: 100%; /* Important for flex to span width within a table cell */
      /* display: flex; /* Not strictly necessary if ul.social-links is centered by margin:auto */
      /* justify-content: center; */ /* Not strictly necessary here */
      margin: 20px auto; /* Centers the social-container itself within its parent's flow */
    }
    .social-links {
      display: flex; /* Activates flexbox for list items */
      justify-content: center; /* Centers list items horizontally */
      align-items: center;
      gap: 20px; /* Space between links */
      padding: 0;
      margin: 0 auto; /* Added margin: auto to center the UL itself, good fallback */
      list-style: none; /* Remove default list bullets */
    }
    .social-links li {
      display: inline-block; /* Good for email client compatibility */
    }
    .social-links a {
      color: #000080;
      text-decoration: none;
      display: flex; /* For icon and text alignment */
      align-items: center;
      gap: 5px;
      font-size: 14px;
      transition: color 0.2s ease;
    }
    .social-links a:hover { color: #000066; }
    .social-icon { width: 24px; height: 24px; }

    /* --- Responsive Adjustments --- */
    @media screen and (max-width: 480px) {
      .email-container {
        margin: 15px auto;
        border-radius: 0; /* Optional: make corners sharp on mobile */
      }
      .email-body {
        padding: 30px 20px; /* Reduce padding on small screens */
      }
      .cta-button {
        padding: 12px 25px;
        font-size: 15px;
      }
      .social-links {
        flex-direction: column; /* Stack social links vertically on small screens */
        gap: 10px;
      }
    }
  </style>
</head>

